<div class="background-auth">
<div class="auth-container">
  <h1>Sign up</h1>
  <form method="POST" action="/auth/signup">
    <div class="field">
      <input type="text" name="username" placeholder="Username*" />
    </div>

    <div class="field">
      <input type="password" name="password" placeholder="Password*"/>
    </div>

    <div class="field">
      <input type="text" name="age" placeholder="Age*" />
    </div>

    <div class="field">
      <input type="text" name="email" placeholder="Email*" />
    </div>

    <div class="field">
      <label style: "font-weight:bold">Gender:</label>
        <select name="gender">
          <option value="...">...</option>
          <option value="Woman">Woman</option>
          <option value="Man">Man</option>
            </select>
    </div>

    <div class="field">
      <label style:"font-weight:bold">Interested in:</label>
      <select name="interestedin">
        <option value="...">...</option>
        <option value="Women">Women</option>
        <option value="Men">Men</option>
        <option value="Both">Both</option>
      </select>
    </div>

    <div class="field">
      <div class="field">
         <textarea name="description" placeholder="Describe yourself here..."></textarea>
      </div>
    </div>
    

    <div class="field submit">
      <button type="submit" class="button-auth">Sign up</button>
    </div>
  </form>
</div>
</div>

<script>
  
  const parentContainer = document.querySelector('.container');
  parentContainer.style.padding = "0px";

</script>